generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String      @unique
  email     String      @unique
  firstName String?
  lastName  String?
  projects  Project[]
  buildings Building[]
  Attribute Attribute[]
}

model Project {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   @db.ObjectId
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  surveys   Survey[]
}

model Survey {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  ownerId          String     @db.ObjectId
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  name             String
  projectId        String     @db.ObjectId
  project          Project    @relation(fields: [projectId], references: [id])
  buildings        Building[] @relation(fields: [buildingIds], references: [id])
  buildingIds      String[]   @db.ObjectId
  customProperties Json?
}

model Building {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  owner         User         @relation(fields: [ownerId], references: [id])
  ownerId       String       @db.ObjectId
  address       String
  spaces        Space[]
  spaceIds      String[]     @db.ObjectId
  attachments   Attachment[]
  attachmentIds String[]     @db.ObjectId
  surveys       Survey[]     @relation(fields: [surveyIds], references: [id])
  surveyIds     String[]     @db.ObjectId
  photoUrls     String[]
  attributes    Json?
}

model Attribute {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  label     String
  type      String
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   @db.ObjectId
}

model Space {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  buildingId       String   @db.ObjectId
  building         Building @relation(fields: [buildingId], references: [id])
  customProperties Json?
}

model Attachment {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  url        String
  title      String
  type       String
  building   Building? @relation(fields: [buildingId], references: [id])
  buildingId String?   @db.ObjectId
}
