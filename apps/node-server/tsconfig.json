{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./src", 
  },
  "paths": { 
    "@repo/*": ["../../packages/*"]
  },
  "include": [
    "src/**/*.ts"
  ], 
  "exclude": ["dist"]
}