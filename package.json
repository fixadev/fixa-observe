{
  "name": "fixa.dev",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --concurrency 20",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "db:generate": "pnpm --filter @repo/db generate",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "vercel-build": "pnpm --filter @repo/db db:generate && pnpm --filter @repo/db db:deploy  && turbo build --filter=@repo/types --filter=@repo/services && cd apps/web-app && pnpm build"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.0.12",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
